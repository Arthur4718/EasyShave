<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.devarthur.easyshave">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.devarthur.easyshave.KotlinApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.devarthur.easyshave.activity.User.UserActivity">
        </activity>
        <activity android:name="com.devarthur.easyshave.activity.RegisterActivities.CompleteProfile">
        </activity>
        <activity android:name="com.devarthur.easyshave.activity.RegisterActivities.RecoverPassword">
        </activity>
        <activity android:name="com.devarthur.easyshave.activity.RegisterActivities.CreateAccount">
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.RegisterActivities.LoginEmailActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.devarthur.easyshave.activity.RegisterActivities.SelectLoginActivity"/>
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.RegisterActivities.SelectLoginActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.RegisterActivities.ConnectionErrorActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.RegisterActivities.WellcomeActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.BaseActivities.CarrosActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.devarthur.easyshave.activity.RegisterActivities.MainActivity"/>
        </activity>
        <activity
                android:name="com.devarthur.easyshave.activity.RegisterActivities.MainActivity"
                android:theme="@style/AppTheme.NavDrawer">
        </activity>

        <meta-data
                android:name="com.facebook.sdk.ApplicationId"
                android:value="@string/facebook_app_id"/>

        <activity
                android:name="com.facebook.FacebookActivity"
                android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                android:label="@string/app_name"/>
        <activity
                android:name="com.facebook.CustomTabActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/fb_login_protocol_scheme"/>
            </intent-filter>
        </activity>
    </application>

</manifest>